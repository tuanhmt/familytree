{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 * - is_dashboard: A flag indicating if the current page is the dashboard.
 * - page_title: The title of the current page.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header: Items for the header region.
 * - page.primary_menu: Items for the primary menu region.
 * - page.secondary_menu: Items for the secondary menu region.
 * - page.highlighted: Items for the highlighted content region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - page.sidebar_first: Items for the first sidebar.
 * - page.sidebar_second: Items for the second sidebar.
 * - page.footer: Items for the footer region.
 * - page.breadcrumb: Items for the breadcrumb region.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

{% block library %}
{% endblock %}
<div id="page" class="layout-container m-0">
	{% block header_primary %}
		{% embed '@familytree/components/layout/header.twig' %}
			{% block content %}
				<div class="header-left d-flex align-item-end">
					<img src="/themes/custom/familytree/images/phoenix.svg" alt="{{ 'Home'|t }}" />
				</div>
				<div class="header-primary d-flex align-item-end">
					{% if page.header %}
						{% block header %}
							{{ page.header }}
						{% endblock %}
					{% endif %}
				</div>
				<div class="header-right d-flex align-item-end">
					<img src="/themes/custom/familytree/images/dragon.svg" alt="{{ 'Home'|t }}" />
				</div>
			{% endblock %}
		{% endembed %}
	{% endblock %}

	{% block main_navigation %}
		{% embed '@familytree/components/layout/main_navigation.twig' %}
			{% block content %}
				{# main navigation #}
				{% if page.navigation %}
					{% block navigation %}
						{{ page.navigation }}
					{% endblock %}
				{% endif %}
				{# end main navigation #}
			{% endblock %}
		{% endembed %}
	{% endblock %}

	{% block header_secondary %}
		{{ page.header_secondary }}
	{% endblock %}

	{% block main %}
		<main role="main" class="main-section mt-3">
			<div class="container">
				{% if page.main_sticky_left %}
				<div class="main-sticky-left">
					{% block main_sticky_left %}
						{{ page.main_sticky_left }}
					{% endblock %}
				</div>
				{% endif %}
				{# check if sidebar has content #}
				{% if page.sidebar or is_front %}
					<div class="row">
						<div class="col-md-8">
							<section class="row top-content">
								<div
									class="col-lg-6 col-md-7">
									{#  slideshow #}
									{% if page.slideshow %}
										{% block slideshow %}
											{{ page.slideshow }}
										{% endblock %}
									{% endif %}
									{#  end slideshow #}
								</div>
								<div
									class="col-lg-6 col-md-5">
									{#  latest_content #}
									{% if page.latest_content %}
										{% block latest_content %}
											{{ page.latest_content }}
										{% endblock %}
									{% endif %}
									{#  end latest_content #}
								</div>
							</section>

							<section
								class="col-left">
								{# message #}
								{{ page.highlighted }}
								{# end message #}
								{# main content #}
									{% block content %}
									{{ page.content }}
								{% endblock %}
								{# end main content #}
							</section>
						</div>
						<aside
							class="col-md-4">
							{# sidebar #}
							{% block sidebar %}
								{{ page.sidebar }}
							{% endblock %}
							{# end sidebar #}
						</aside>
					</div>
				{% else %}
					<section
						class="content-fullwidth">
						{# main content #}
						{{ block('content') }}
						{# end main content #}
					</section>
				{% endif %}
				{% if page.main_sticky_right %}
				<div class="main-sticky-right">
					{% block main_sticky_right %}
						{{ page.main_sticky_right }}
					{% endblock %}
				</div>
				{% endif %}
			</div>
		</main>
	{% endblock %}

	{% block footer_before %}{% endblock %}

	<footer>
		<figure class="top-footer text-center">
			<div class="container pt-md-3 pt-2">
				{% if page.footer %}
					{% block footer %}
						{{ page.footer }}
					{% endblock %}
				{% endif %}
				<div class="copyright text-white mt-2">
					{{ 'Copyright 2024 - Vuong Dinh Family.'|t}}
					{{ 'Designed by HMT.'|t}}
				</div>
			</div>
		</figure>
	</footer>

</div>
